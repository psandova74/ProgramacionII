package ar.edu.unlam.pb2.biblioteca;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.TreeMap;

public class BibliotecaPopular implements Comparable<Libro> {
	
	TreeMap<Integer,Libro> libros = new TreeMap<Integer,Libro>();
	
	public Integer cantidadLibrosPorGenero() {
		return libros.size();
	}
	
	public ArrayList<Genero> librosPorGenero() {
		return new ArrayList<Genero>();
	}
	
		
	public void agregarLibro(Libro nuevoLibro) {
		
		libros.put(libros.size()+1, nuevoLibro);
	}

	@Override
	public int compareTo(Libro otroLibro) {
		
		return this.compareTo();
	}
	
	public Map<Genero,Integer> armarListaPorGenero(List<Libro> libros) {
	
		Map<Genero,Integer> librosPorGenero = new HashMap<Genero, Integer>();
		
		for (Libro libro : libros) {
			Genero generoLibro = libro.getGenero();
			if(librosPorGenero.containsKey(generoLibro)) {
				Integer v = librosPorGenero.get(generoLibro) + 1;
				librosPorGenero.put(generoLibro, v);
				}
			else{
				librosPorGenero.put(generoLibro, 1);
				}
			}
		return librosPorGenero;
		}

	
}
