package ar.edu.unlam.pb2.biblioteca;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.TreeMap;
import java.util.TreeSet;


public class BibliotecaPopular implements Comparable<Libro> {
	
	TreeMap<Integer,Libro> libros = new TreeMap<Integer,Libro>();
	
	public Integer cantidadLibrosPorGenero() {
		return libros.size();
	}
	
	public ArrayList<Genero> librosPorGenero() {
		return new ArrayList<Genero>();
	}
	
		
	public void agregarLibro(Libro nuevoLibro) {
		
		libros.put(libros.size()+1, nuevoLibro);
	}

/*
