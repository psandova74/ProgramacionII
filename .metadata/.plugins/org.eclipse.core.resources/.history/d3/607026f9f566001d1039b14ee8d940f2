package ar.edu.unlam.pb2.biblioteca;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.TreeMap;
import java.util.TreeSet;




public class BibliotecaPopular implements Comparable<Libro> {
	TreeMap<Integer,Libro> libros = new TreeMap<Integer,Libro>();
	
	public Integer cantidadLibros() {
		return libros.size();
	}
		
	public void agregarLibro(Libro nuevoLibro) {
		
		libros.put(libros.size()+1, nuevoLibro);
	}

	
	public TreeMap<Integer,Libro> armarListaPorTitulo(List<Libro> agregarLibros) {
	
		TreeMap<Integer,Libro>  librosPorTitulo = new TreeMap<Integer,Libro>();
		for (Libro libro : agregarLibros) {
			this.agregarLibro(libro);
		}		
		return librosPorTitulo;
	}
	
	public TreeMap<Integer,Libro>  armarListaPorAutor(List<Libro> agregarLibros) {
		
		TreeMap<Integer,Libro> librosPorTitulo = new TreeMap<Integer,Libro>(new OrdenadorPorAutor());
		for (Libro libro : agregarLibros) {
			this.agregarLibro(libro);
		}		
		return librosPorTitulo;
	}
	
}
