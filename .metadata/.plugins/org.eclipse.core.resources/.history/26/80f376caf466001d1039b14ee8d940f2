package ar.edu.unlam.pb2.biblioteca;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.TreeMap;
import java.util.TreeSet;




public class BibliotecaPopular implements Comparable<Libro> {
	TreeMap<Integer,Libro> libros = new TreeMap<Integer,Libro>();
	
	public Integer cantidadLibros() {
		return libros.size();
	}
		
	public void agregarLibro(Libro nuevoLibro) {
		
		libros.put(libros.size()+1, nuevoLibro);
	}

	
	public Map<Genero,Integer> armarListaPorTitulo(List<Libro> libros) {
	
		Map<Genero,Integer> librosPorTitulo = new HashMap<Genero, Integer>();
		for (Libro libro : libros) {
			librosPorTitulo.agregarLibro(libro);
		}
			
		return librosPorTitulo
		}

	@Override
	public int compareTo(Libro o) {
		// TODO Auto-generated method stub
		return 0;
	}

	
}
